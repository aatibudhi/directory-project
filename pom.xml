<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.directory</groupId>
  <version>1.0-SNAPSHOT</version>
  <artifactId>build</artifactId>
  <name>build</name>
  <packaging>pom</packaging>
  <modules>
    <module>mina-build</module>
    <module>apacheds-build</module>
    <module>asn1</module>
    <module>protocol-common</module>
    <module>kerberos-common</module>
    <module>ldap-common</module>
    <module>changepw-protocol</module>
    <module>dhcp-protocol</module>
  </modules>
  <repositories>
    <!-- For ibiblio standard: might want to add a mirror as well later            
    <repository>
      <id>ibiblio</id>
      <name>Standard Ibiblio Repository</name>
      <url>http://ibiblio.org/maven2</url>
    </repository>
    -->
 
    <!-- For our snapshots (do not upload release jars or non-apache jars here)    -->
    <repository>
      <id>apachecvs</id>
      <name>Apache Snapshot Repository</name>
      <url>http://cvs.apache.org/maven-snapshot-repository</url>
    </repository>
    
    <!-- Temporary repo for 3rd party release jars that are not in ibiblio.org yet.-->
    <!-- Artifacts in this repo should be requested for ibiblio upload then        -->
    <!-- removed from this repository - this repo will disappear eventually.       -->
    <repository>
      <id>safehaus</id>
      <name>Alternate Repository for Missing Ibiblio Artifacts</name>
      <url>http://m2.safehaus.org</url>
    </repository>
  </repositories>

  <distributionManagement>
    <snapshotRepository>
      <id>apachecvs</id>
      <url>scpexe://cvs.apache.org/www/cvs.apache.org/maven-snapshot-repository</url>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ssh-external</artifactId>
         <version>1.0-alpha-5</version>
      </extension>
    </extensions>
  </build>

  <profiles>

    <profile>
      <id>jdk1.5</id>
      <activation>
        <jdk>1.5</jdk>
      </activation>
    </profile>
 
    <profile>
      <id>jdk1.4</id>
      <activation>
        <jdk>1.4</jdk>
      </activation>
    </profile>
 
  </profiles>
</project>
