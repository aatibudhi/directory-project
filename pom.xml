<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.directory</groupId>
  <version>1.0-SNAPSHOT</version>
  <artifactId>build</artifactId>
  <name>build</name>
  <packaging>pom</packaging>
  <modules>
    <module>asn1</module>
    <module>mina-build</module>
    <module>apacheds-build</module>
    <module>protocol-common</module>
    <module>kerberos-common</module>
    <module>ldap-common</module>
    <module>changepw-protocol</module>
    <module>dhcp-protocol</module>
    <module>dns-protocol</module>
    <module>kerberos-protocol</module>
    <module>ldap-protocol</module>
    <module>ntp-protocol</module>
  </modules>
  <dependencies>
   <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <!-- For ibiblio standard: might want to add a mirror as well later            
    <repository>
      <id>ibiblio</id>
      <name>Standard Ibiblio Repository</name>
      <url>http://ibiblio.org/maven2</url>
    </repository>
    -->
 
    <!-- For our snapshots (do not upload release jars or non-apache jars here)    -->
    <repository>
      <id>apachecvs</id>
      <name>Apache Snapshot Repository</name>
      <url>http://cvs.apache.org/maven-snapshot-repository</url>
    </repository>
    
    <!-- Temp repo for 3rd party jars that are not in ibiblio.org yet.-->
    <!-- Artifacts in repo should be requested for ibiblio upload &   -->
    <!-- removed from this repository - this repo will disappear.     -->
    <repository>
      <id>safehaus</id>
      <name>Alternate Repository for Missing Ibiblio Artifacts</name>
      <url>http://m2.safehaus.org</url>
    </repository>
  </repositories>

  <distributionManagement>
    <snapshotRepository>
      <id>apachecvs</id>
      <url>scpexe://cvs.apache.org/www/cvs.apache.org/maven-snapshot-repository</url>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ssh-external</artifactId>
         <version>1.0-alpha-5</version>
      </extension>
    </extensions>
  </build>
</project>
