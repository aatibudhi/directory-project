<?xml version="1.0" encoding="ISO-8859-1"?> 
  
<project 
  default="multiproject:install" 
  xmlns:j="jelly:core"
  xmlns:ant="jelly:ant">
  
  <postGoal name="multiproject:site">
    <echo>Generating combined javadocs</echo>
    
    <javadoc destdir="${maven.build.dir}/docs/apidocs">
      <packageset dir="core/src/main/java"/>
      <packageset dir="main/src/main/java"/>
      <packageset dir="plugin//src/main/java"/>
      <packageset dir="shared/src/main/java"/>
      <classpath>
        <fileset dir="${basedir}">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javadoc>
  </postGoal>
</project>
