<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apache.directory.server</groupId>
    <artifactId>build</artifactId>
    <version>1.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>antlr-osgi</artifactId>
  <name>Antlr Library</name>
  <description>
    The Antlr Library packaged as an OSGi bundle.
  </description>
  <packaging>osgi-bundle</packaging>  
  <dependencies>
    <dependency>
      <groupId>antlr</groupId>
      <artifactId>antlr</artifactId>
      <version>2.7.6</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix.plugins</groupId>
        <artifactId>maven-osgi-plugin</artifactId>
        <version>0.8.0-SNAPSHOT</version>
        <extensions>true</extensions>
        <configuration>
          <osgiManifest>
            <bundleName>Antlr Library Bundle</bundleName>
            <bundleVendor>Apache Software Foundation</bundleVendor>
            <bundleCategory>Library</bundleCategory>
            <bundleDescription>
              A bundle that registers the Antlr Library.
            </bundleDescription>
            <exportPackage>
              antlr,antlr.collections.impl
            </exportPackage>
          </osgiManifest>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
