<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apache.directory</groupId>
    <artifactId>build</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <groupId>org.apache.directory.server</groupId>
  <version>0.9.4-SNAPSHOT</version>
  <artifactId>build</artifactId>
  <name>apacheds-build</name>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.apache.directory.common</groupId>
      <artifactId>org.apache.ldap.common</artifactId>
      <version>0.9.4-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>jdk1.5</id>
      <activation>
        <jdk>1.5</jdk>
      </activation>
      <modules>
        <module>core</module>
        <module>shared</module>
        <module>plugin</module>
        <module>core-unit</module>
        <!--
        <module>server</module>
        <module>server-ssl</module>
        <module>server-unit</module>
        <module>server-main</module>
        -->
        <module>protocols</module>
      </modules>
    </profile>

    <profile>
      <id>jdk1.4</id>
      <activation>
        <jdk>1.4</jdk>
      </activation>
      <modules>
        <module>core</module>
        <module>shared</module>
        <module>plugin</module>
        <module>core-unit</module>
        <module>server</module>
        <module>server-unit</module>
        <module>server-main</module>
        <module>protocols</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <configuration>
                  <tasks>
                    <echo>
====================================================================
                       W A R N I N G
                       -------------

Build with 1.4 jvm will not include modules:
 
 o apacheds-server-ssl

Use JDK 1.5 to make sure these modules build.
====================================================================
                    </echo>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
